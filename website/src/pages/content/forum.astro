---
import Content from "./md/forum.mdx"
---

<div class="webbrowser">
    <div class="web-prompt">
        Użytkownik: <p>lowieNaSmiglo85</p> Hasło: 
        <input id="login-forum" type="text"/>
        <button id="login-forum-button">></button>
    </div>
    <div id="forum-div">
        <Content></Content>
    </div>
</div>

<script>
    let a = document.getElementById("forum-div");
    if(a) {
        a.style.opacity = "0";
    }

    const passwd = "bulbul";
    document.getElementById("login-forum-button")?.addEventListener("click", check_password);
    function check_password() {
        let input = document.getElementById("login-forum") as HTMLInputElement;
        if(input) {
            if(input.value.toLowerCase() == passwd) {
                if(a) {
                    a.style.opacity = "1";
                }
            }
        }
    }
</script>
